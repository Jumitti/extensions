{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "dice-tiles",
  "title": "Dice Tiles",
  "description": "A minimalist dice-and-tiles elimination game. Roll dice, eliminate tiles matching their sum, and climb through reward tiers while tracking victories and defeats.",
  "icon": "dice-tiles.png",
  "author": "julien_minniti",
  "license": "MIT",
  "repository": "https://github.com/Jumitti/dice-tiles",
  "categories": [
    "Fun"
  ],
  "platforms": [
    "macOS",
    "Windows"
  ],
  "commands": [
    {
      "name": "index",
      "title": "Dice Tiles",
      "subtitle": "Tiles and Dice Challenge",
      "description": "Roll dice, match tile sums, and progress through levels directly in Raycast.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.45.2",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@eslint/json": "^0.13.2",
    "@raycast/eslint-config": "^1.0.4",
    "@types/node": "^18.16.0",
    "@types/react": "^18.2.7",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.4.0",
    "prettier": "^3.2.5",
    "typescript": "^4.4.3",
    "typescript-eslint": "^8.46.0"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write ."
  },
  "raycast": {
    "metadata": {
      "readme": "metadata/README.md",
      "changelog": "CHANGELOG.md",
      "screenshot": "metadata/screen_base.png"
    }
  }
}
